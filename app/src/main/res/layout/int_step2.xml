<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:layout_width="0dp" android:layout_height="wrap_content"
        android:inputType="textPersonName" android:ems="10" android:id="@+id/et_code"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.39"
        android:hint="Code" />
    <Spinner android:layout_width="0dp" android:layout_height="wrap_content"
        android:id="@+id/sp_location" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent" android:entries="@array/locatieArray"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.55" />
    <TextView android:text="Leerlingnummer of roostercode" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tv_code"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/et_code"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" />
    <TextView android:text="Klas" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tvGrade"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/rbG13"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" />
    <TextView android:text="Locatie" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tv_location"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/sp_location" />
    <TextView android:id="@+id/tv_settings" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" android:layout_marginTop="48dp" android:text="Instellingen"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView android:text="Code niet ingevuld" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tv_error_code"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:textColor="#D50000" android:visibility="invisible" />
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_error_red_24dp" android:id="@+id/iv_error"
        app:layout_constraintEnd_toStartOf="@+id/tv_error_code" android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="22dp"
        android:scaleType="center" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
        android:visibility="invisible" />
    <RadioButton android:text="Klas 1-3" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/rbG13"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.7" />
    <RadioButton android:text="Klas 4-6" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/rbG46"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.7" app:layout_constraintStart_toEndOf="@+id/rbG13"
        android:layout_marginStart="24dp" />
</android.support.constraint.ConstraintLayout>